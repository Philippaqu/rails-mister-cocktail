<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-6 col-sm-offset-3">
      <h1><%= @cocktail.name %></h1>

      <h2>List of ingredients</h2>
      <ul class="list">
        <% @cocktail.doses.each do |dose| %>
        <li><%= dose.description %> of <%= dose.ingredient.name %>
          <%= link_to 'Remove this dose', dose_path(id: dose.id) %>
        </li>
        <% end %>
      </ul>
      <%= link_to 'Back', cocktails_path %>
    </div>
  </div>
</div>
